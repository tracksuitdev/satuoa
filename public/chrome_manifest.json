{
  "name": "satuoa",
  "version": "1.0",
  "description": "Denominate prices in sats",
  "permissions": [
    "declarativeContent", "activeTab"
  ],
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo/sat-symbol-16.png",
      "32": "images/logo/sat-symbol-32.png",
      "48": "images/logo/sat-symbol-48.png",
      "128": "images/logo/sat-symbol-128.png"
    }
  },
  "icons": {
    "16": "images/logo/sat-symbol-16.png",
    "32": "images/logo/sat-symbol-32.png",
    "48": "images/logo/sat-symbol-48.png",
    "128": "images/logo/sat-symbol-128.png"
  }
}
